include mixins/svg

doctype html
html
	head
		title= title
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel='stylesheet', href='/stylesheets/style.css')
		style(type="text/css") .icon-logo { background: url(sprite-cb090123.svg) 100% 0 no-repeat; width: 500px; height: 480px;}
		link(href='http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,200,200italic',rel='stylesheet',type='text/css')
		link(rel='stylesheet', href='http://code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.css')
		script(src='//code.jquery.com/jquery-2.1.3.min.js')
		script(src='//code.jquery.com/mobile/1.4.5/jquery.mobile-1.4.5.min.js')
	body
		div(data-role="page")
			header(data-role="header")
				div.ui-body-b.ui-body
					nav(data-role="navbar", data-grid="d")
						ul
							li
								a(href="/")
									+svg("logo", "top-logo")
									span Subjify!
							li
								form
									input(name="search", id="search", value="", placeholder="search..." type="search")
							if (! user)
								li
									a.popup(href="#login") Login
								li
									a.popup(href="#signup") Signup
							else
								li
									a(href="/profile.html") #{user.name}
							li
								a(href="#menu" data-icon="bars")

			block content
		div(data-role="page", id="login")
			header(data-role="header")
				h1 Login
			form(data-role="main", action="/login", method="post")
				if message && message.length > 0
				.flash-alert message
				.email
					label Email
					input(type="text",name="email")
				.password
					label Password
					input(type="password",name="password")
				button(type="submit") Login
		div(data-role="page", id="signup")
			header(data-role="header")
				h1 Signup
			form(data-role="main", action="/signup",method="post")
				if message && message.length > 0
					.flash-alert message
				.name
					label Name
					input(type="text",name="name")
				.email
					label Email
					input(type="text",name="email")
				.password
					label Password
					input(type="password",name="password")
				button(type="submit") Signup
			footer(data-role="footer")
		//javascript
		script(src='/js/subjify.js')