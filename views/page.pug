doctype html
html
	head
		title= title
		meta(name="viewport", content="width=device-width, initial-scale=1")
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css')
		link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css')
		script(src='//code.jquery.com/jquery-2.1.3.min.js')
		script(src='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js')
	body
		.modal.fade#login-content(tabindex="-1",role="dialog")
			.modal-dialog(role="document")
				.modal-content
					.modal-header
						button.close(type="button",data-dismiss="modal",aria-label="Close")
							span(aria-hidden="true") &times;
						h4.modal-title(id="myModalLabel") Login
					.modal-body
						form
							.form-group
								label.control-label(for="username") Username:
								input.form-control(type=text,id="username")
							.form-group
								label.control-label(for="password") Password:
								input.form-control(type=password,id="password")
					.modal-footer
						button.btn.btn-default(type="button",data-dismiss="modal") Close
						button.btn.btn-primary(type="button") Login
		.modal.fade#signup-content(tabindex="-1",role="dialog")
			.modal-dialog(role="document")
				.modal-content
					.modal-header
						button.close(type="button",data-dismiss="modal",aria-label="Close")
							span(aria-hidden="true") &times;
						h4.modal-title(id="myModalLabel") Join Subjify today
					.modal-body
						form
							.form-group
								label.control-label(for="username") Username:
								input.form-control(type=text,id="username")
							.form-group
								label.control-label(for="password") Password:
								input.form-control(type=password,id="password")
					.modal-footer
						button.btn.btn-default(type="button",data-dismiss="modal") Close
						button.btn.btn-default(type="button")
							img(alt="Sign in with twitter" src="/img/sign-in-with-twitter-link.png")
						button.btn.btn-primary(type="button") Signup
		header
			nav.navbar.navbar-pills
				.container-fluid
					.navbar-header
						button.navbar-toggle.collapsed(type="button",data-toggle="collapse",data-target="navbar-collapse",aria-expanded="false")
							span.sr-only Toggle navigation
							span.icon-bar From path to path
					.collapse.navbar-collapse(id="navbar-collapse")
						ul.nav.navbar-nav
							li.active
								a(href="#") Subjify <span class="sr-only">(current)</span>
						form.navbar-form.navbar-left(role="search")
							.form-group
								input.form-control(type="text" placeholder="Search")
							button.btn.btn-success(type="submit") <span class="glyphicon glyphicon-search" aria-hidden="true"></span>
						ul.nav.navbar-nav.pull-right
							if (! user)
								li
									a.popup(data-toggle="modal" data-target="#login-content", href="#") login
								li
									a.popup(data-toggle="modal" data-target="#signup-content", href="#") signup
							else
								li
									a(href="/profile/#{user.name}.html") #{user.name}

		main
			block content
		footer